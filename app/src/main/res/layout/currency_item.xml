<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    android:elevation="3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/idRLCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idTVSymbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:text="Symbol"
            android:textColor="@color/black_shade_1"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@id/idTVCurrencyRate"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/idTvCurrencyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVSymbol"
            android:textColor="@color/black_shade_1"
            android:text="Name"
            android:padding="3dp"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/idTVCurrencyRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Rate"
            android:textColor="@color/black_shade_1"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:padding="3dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>